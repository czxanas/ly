---
import '../styles/main.css';
import { SEO } from 'astro-seo';
import { defaultSeo } from '../data/seo';
import { getSeo } from '../utils/seo';
import Heart from '../components/heart.astro';

interface Props {
    title: string;
    seo?: Seo;
}

const { title, seo = {} } = Astro.props;

const seoData = getSeo(seo, defaultSeo, title);

const FONTS: string[] = [
    // 'WebfontRegular.woff2',
    // 'WebfontBold.woff2',
];
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />

        <SEO {...seoData} />

        <!-- Fonts -->
        {
            FONTS.map((font) => (
                <link
                    rel="preload"
                    href={`/fonts/${font}`}
                    as="font"
                    type="font/woff2"
                    crossorigin
                />
            ))
        }
        <!--/ FONTS -->
    </head>
    <body>
        <header class="pointer-events-none fixed w-full top-10 left-0 z-999">
            <nav class="flex justify-center items-center px-8">
                    <!-- <Heart /> -->
            </nav>
        </header>
        <main id="swup" class="transition-fade relative w-full min-h-[100dvh] overflow-hidden">
            <slot />
        </main>
        <script src="../scripts/app.ts"></script>
    </body>
</html>

<style>
    html,
    body {
        margin: 0;
        width: 100%;
        height: 100%;
    }
</style>
